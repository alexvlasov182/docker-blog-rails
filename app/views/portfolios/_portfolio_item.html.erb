<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%#= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb') %>
    <div class="card-body" data-id="<%=	 portfolio_item.id %>">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item)%></span>

      </p>
      <div class="portfolio-description">
        <%= portfolio_item.subtitle %>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <% if logged_in?(:site_admin) %>
            <%= link_to 'Delete',portfolio_path(portfolio_item),  method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger disabled portfolio-delete' %>
          <%	end  %>
        </div>
        <small class="text-muted">published: <%= distance_of_time_in_words(portfolio_item.created_at, Time.now) %></small>
      </div>
    </div>
  </div>
</div>